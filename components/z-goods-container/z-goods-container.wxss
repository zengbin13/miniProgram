/* components/z-goods-container/z-goods-container.wxss */
.goods-container {
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
  background-color: #f4f4f4;
  position: relative;
}
.goods-item {
  width: 330rpx;
  margin-top: 30rpx;
}
.goods-container::after {
  content: "正在努力加载中...";
  display: block;
  position: absolute;
  bottom: -60rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #ff3f78;
  font-size: 24rpx;
  text-align: center;
  background-color: #f4f4f4;
}
